<section class="login">
    <div class="nav">
      <%= link_to user_session_path do %>
        <i class="fa-solid fa-arrow-left back"></i>
      <% end %>
      <h2 class="nav">Forgot your password?</h2>
    </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="textField mt-3 md-3">
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control stuff" %>
      </div>
    </div>
    <div class="actions mt-3">
      <%= f.submit "Send me reset password instructions", class: "forgot" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
